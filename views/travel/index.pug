extends ../layaout/index.pug
block container
    main.container.mt-5
        .row
            .col-md-5
                img.img-fluid(src=`/img/destinos_${viaje.img}_ln.jpg`, alt="Destino")
            .col-md-7
                h1.text-center= viaje.titulo
                p
                    i.fas.fa-calendar-alt
                    |   Fecha Ida:  #{viaje.fecha_ida} - Fecha Vuelta:  #{viaje.fecha_vuelta}
                p
                    i.fas.fa-dollar-sign
                    |  #{viaje.precio}
                p
                    i.fas.fa-users
                    |  #{viaje.disponible} Disponibles
                p= viaje.descripcion